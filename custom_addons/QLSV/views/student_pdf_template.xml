<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="student_report_pdf_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="student">
                <div>
                    <h3><t t-esc="student.name"/></h3>
                    <p>Mã sinh viên: <t t-esc="student.student_code"/></p>
                    <p>Ngày sinh: <t t-esc="student.birth_date"/></p>
                    <p>Email: <t t-esc="student.email"/></p>
                    <hr/>
                </div>
            </t>
        </t>
    </template>
    
    <record id="student_report_pdf" model="ir.actions.report">
        <field name="name">Báo cáo sinh viên</field>
        <field name="model">qlsv.student</field>
        <field name="report_type">qweb-html</field>
        <field name="report_name">qlsv.student_report_pdf_template</field>
        <!-- phải trùng với id của template -->
        <field name="report_file">qlsv.student_report_pdf_template</field>
        <field name="print_report_name">'Báo Cáo Sinh Viên - %s' % (object.id)</field>
    </record>
</odoo>