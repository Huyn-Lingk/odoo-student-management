<odoo>
    <data>
        <!-- list View -->
        <record id="view_student_list" model="ir.ui.view">
            <field name="name">qlsv.student.list</field>
            <field name="model">qlsv.student</field>
            <field name="arch" type="xml">
                <list string="Danh sách sinh viên">
                    <field name="student_code"/>
                    <field name="name"/>
                    <field name="email"/>
                    <field name="phone"/>
                    <field name="class_id"/>
                </list>
            </field>
        </record>

        <!-- Form View -->
        <record id="view_student_form" model="ir.ui.view">
            <field name="name">qlsv.student.form</field>
            <field name="model">qlsv.student</field>
            <field name="arch" type="xml">
                <form string="Thông tin sinh viên">
                    <sheet>
                        <group>
                            <field name="student_code"/>
                            <field name="name"/>
                            <field name="email"/>
                            <field name="phone"/>
                            <field name="class_id"/>
                            <field name="gender"/>
                            <field name="birth_date"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Action -->
        <record id="action_student" model="ir.actions.act_window">
            <field name="name">Sinh viên</field>
            <field name="res_model">qlsv.student</field>
            <field name="view_mode">list,form</field>
        </record>
    </data>
</odoo>
