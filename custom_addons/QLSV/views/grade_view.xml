<odoo>
    <data>
        <!-- list View -->
        <record id="view_grade_list" model="ir.ui.view">
            <field name="name">qlsv.grade.list</field>
            <field name="model">qlsv.grade</field>
            <field name="arch" type="xml">
                <list string="Danh sách điểm">
                    <field name="student_id"/>
                    <field name="subject_id"/>
                    <field name="mid_term"/>
                    <field name="final"/>
                    <field name="average"/>
                </list>
            </field>
        </record>

        <!-- Form View -->
        <record id="view_grade_form" model="ir.ui.view">
            <field name="name">qlsv.grade.form</field>
            <field name="model">qlsv.grade</field>
            <field name="arch" type="xml">
                <form string="Thông tin điểm số">
                    <sheet>
                        <group>
                            <field name="student_id"/>
                            <field name="subject_id"/>
                            <field name="mid_term"/>
                            <field name="final"/>
                            <field name="average" readonly="1"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Action -->
        <record id="action_grade" model="ir.actions.act_window">
            <field name="name">Bảng điểm</field>
            <field name="res_model">qlsv.grade</field>
            <field name="view_mode">list,form</field>
        </record>
    </data>
</odoo>
