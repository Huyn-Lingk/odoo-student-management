<odoo>
    <data>
        <!-- list View -->
        <record id="view_class_list"
                model="ir.ui.view">
            <field name="name">qlsv.class.list</field>
            <field name="model">qlsv.class</field>
            <field name="arch"
                   type="xml">
                <list string="Danh sách lớp học">
                    <field name="class_code" />
                    <field name="name" />
                </list>
            </field>
        </record>
        <!-- Form View -->
        <record id="view_class_form"
                model="ir.ui.view">
            <field name="name">qlsv.class.form</field>
            <field name="model">qlsv.class</field>
            <field name="arch"
                   type="xml">
                <form string="Thông tin lớp học">
                    <sheet>
                        <group>
                            <field name="class_code" />
                            <field name="name" />
                        </group>
                        <notebook>
                            <page string="Danh sách sinh viên">
                                <field name="student_ids"
                                       readonly="1">
                                    <list>
                                        <field name="student_code" />
                                        <field name="name" />
                                        <field name="email" />
                                    </list>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- Action -->
        <record id="action_class"
                model="ir.actions.act_window">
            <field name="name">Lớp học</field>
            <field name="res_model">qlsv.class</field>
            <field name="view_mode">list,form</field>
        </record>
       
    </data>
</odoo>