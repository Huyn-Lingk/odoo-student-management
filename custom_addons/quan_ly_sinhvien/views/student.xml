<odoo>
    <record id="view_student_list" model="ir.ui.view">
        <field name="name">quan_ly_sinhvien.student.list</field>
        <field name="model">quanlysinhvien.student</field>
        <field name="arch" type="xml">
            <list string="Student List">
                <field name="name"/>
                <field name="birth_date"/>
                <field name="email"/>
                <field name="student_code"/>
                <field name="gender"/>
                <field name="class_name"/>
                <field name="phone"/>
            </list>
        </field>
    </record>

    <record id="view_student_form" model="ir.ui.view">
        <field name="name">quan_ly_sinhvien.student.form</field>
        <field name="model">quanlysinhvien.student</field>
        <field name="arch" type="xml">
            <form string="Student Form">
                <header>
                    <button name="%(action_report_student_profile)d"
                            string="In thông tin sinh viên"
                            type="action"
                            class="btn-primary"
                            icon="fa-print"/>
                </header>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="birth_date"/>
                        <field name="email"/>
                        <field name="student_code"/>
                        <field name="gender"/>
                        <field name="class_name"/>
                        <field name="phone"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_student" model="ir.actions.act_window">
        <field name="name">Students</field>
        <field name="res_model">quanlysinhvien.student</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_student_root" name="Quản lý sinh viên"/>
    <menuitem id="menu_student" name="Students" parent="menu_student_root" action="action_student"/>
</odoo>
