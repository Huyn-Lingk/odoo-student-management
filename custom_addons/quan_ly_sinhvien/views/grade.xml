<odoo>
    <record id="view_grade_list" model="ir.ui.view">
    <field name="name">quan_ly_sinhvien.grade.list</field>
    <field name="model">quanlysinhvien.grade</field>
    <field name="arch" type="xml">
      <list>
        <field name="student_id"/>
        <field name="subject_id"/>
        <field name="mid_term"/>
        <field name="final_grade"/>
        <field name="average"/>
      </list>
    </field>
    </record>

    <record id="view_grade_form" model="ir.ui.view">
        <field name="name">quan_ly_sinhvien.grade.list</field>
    <field name="model">quanlysinhvien.grade</field>
        <field name="arch" type="xml">
        <form>
            <sheet>
            <group>
                <field name="student_id"/>
                <field name="subject_id"/>
                <field name="mid_term"/>
                <field name="final_grade"/>
                <field name="average"/>
            </group>
            </sheet>
        </form>
        </field>
    </record>
    <record id="action_grade" model="ir.actions.act_window">
    <field name="name">Bảng điểm</field>
    <field name="res_model">quanlysinhvien.grade</field>
    <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_grade" name="Bảng điểm" parent="menu_student_root" action="action_grade"/>
</odoo>
