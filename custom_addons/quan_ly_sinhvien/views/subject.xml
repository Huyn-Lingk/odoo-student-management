<odoo>
    <record id="view_subject_list" model="ir.ui.view">
        <field name="name">quan_ly_sinhvien.subject.list</field>
        <field name="model">quanlysinhvien.subject</field>
        <field name="arch" type="xml">
            <list string="Subject List">
                <field name="name"/>
                <field name="code"/>
                <field name="credits"/>
                <field name="semester"/>
            </list>
        </field>
    </record>

    <record id="view_subject_form" model="ir.ui.view">
        <field name="name">quan_ly_sinhvien.subject.form</field>
        <field name="model">quanlysinhvien.subject</field>
        <field name="arch" type="xml">
            <form string="Subject Form">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="code"/>
                        <field name="credits"/>
                        <field name="semester"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="action_subject" model="ir.actions.act_window">
        <field name="name">Subjects</field>
        <field name="res_model">quanlysinhvien.subject</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_subject" name="Subjects" parent="menu_student_root" action="action_subject"/>
</odoo>