<odoo>
    <template id="report_student_profile_template">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <t t-set="doc" t-value="docs[0]"/>

                <!-- <div class="page">
                    <div style="display: flex; justify-content: space-between; align-items: center; padding: 0 50px 20px 50px;">
                        <img t-att-src="'data:image/png;base64,%s' % (res_company.logo or '')" style="height: 80px;"/>
                        <div style="text-align: right;">
