    <record id="action_report_student_profile" model="ir.actions.report">
        <field name="name">Student Report</field>
        <field name="model">quanlysinhvien.student</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">quan_ly_sinhvien.report_student_profile_template</field>
        <field name="report_file">quan_ly_sinhvien.report_student_profile_template</field>
        <field name="print_report_name">'Student_' + (object.name or '')</field>
    </record>
</odoo>
